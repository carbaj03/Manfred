<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.RootView">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="AppTheme.RootView.Vertical">
        <item name="android:orientation">vertical</item>
    </style>


    <style name="AppTheme.ListView">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
    </style>

    <style name="AppTheme.Video">
        <item name="android:layout_height">@dimen/video_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="AppTheme.Audio">
        <item name="android:layout_height">@dimen/video_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <style name="AppTheme.Video.Thumbnail">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/ic_airplay</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.Video.Play">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/ic_play</item>
    </style>

    <style name="AppTheme.Video.Marker">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:src">@drawable/ic_favorite</item>
    </style>

    <style name="AppTheme.Video.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>


    <style name="AppTheme.Video.Label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="AppTheme.Video.Date">
        <item name="android:textSize">@dimen/date_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>